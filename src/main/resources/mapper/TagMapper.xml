<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.campus.dao.TagDao">
    
    <!-- 结果映射 -->
    <resultMap id="TagResultMap" type="com.campus.entity.Tag">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="color" property="color" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 通用查询列 -->
    <sql id="Base_Column_List">
        id, name, color, create_time, update_time
    </sql>
    
    <!-- 根据ID查询标签 -->
    <select id="selectTagById" parameterType="java.lang.Long" resultMap="TagResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM tag WHERE id = #{id}
    </select>
    
    <!-- 查询所有标签 -->
    <select id="selectAllTags" resultMap="TagResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM tag ORDER BY id DESC
    </select>
    
    <!-- 根据帖子ID查询关联的标签 -->
    <select id="selectTagsByPostId" parameterType="java.lang.Long" resultMap="TagResultMap">
        SELECT t.id, t.name, t.color, t.create_time, t.update_time FROM tag t
        INNER JOIN post_tag pt ON t.id = pt.tag_id
        WHERE pt.post_id = #{postId}
    </select>
    
    <!-- 插入标签 -->
    <insert id="insertTag" parameterType="com.campus.entity.Tag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tag (name, color, create_time, update_time)
        VALUES (#{name}, #{color}, now(), now())
    </insert>
    
    <!-- 更新标签 -->
    <update id="updateTag" parameterType="com.campus.entity.Tag">
        UPDATE tag 
        SET name = #{name}, color = #{color}, update_time = now()
        WHERE id = #{id}
    </update>
    
    <!-- 根据ID删除标签 -->
    <delete id="deleteTagById" parameterType="java.lang.Long">
        DELETE FROM tag WHERE id = #{id}
    </delete>
    
    <!-- 批量删除标签 -->
    <delete id="batchDeleteTags">
        DELETE FROM tag WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper> 